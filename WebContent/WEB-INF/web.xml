<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>movie-web</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/views/main.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>TheaterServlet</servlet-name>
  	<servlet-class>com.movie.test.servlet.TheaterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>TheaterServlet</servlet-name>
  	<url-pattern>/theater/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UploadServlet</servlet-name>
  	<servlet-class>com.movie.test.servlet.UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UploadServlet</servlet-name>
  	<url-pattern>/fileupload/*</url-pattern> 	
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ParkServlet</servlet-name>
  	<servlet-class>com.movie.test.servlet.ParkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ParkServlet</servlet-name>
  	<url-pattern>/park/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>FoodServlet</servlet-name>
  	<servlet-class>com.movie.test.servlet.FoodServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FoodServlet</servlet-name>
  	<url-pattern>/food/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>MovieServlet</servlet-name>
  	<servlet-class>com.movie.test.servlet.MovieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MovieServlet</servlet-name>
  	<url-pattern>/movie/*</url-pattern>
  </servlet-mapping>

  <servlet>
  	<servlet-name>StageServlet</servlet-name>
  	<servlet-class>com.movie.test.servlet.StageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>StageServlet</servlet-name>
  	<url-pattern>/stage/*</url-pattern>
  </servlet-mapping> 
</web-app>